<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.Agregar_RecetasActivity"
    android:orientation="vertical"
    android:padding="20dp"
    android:background="@drawable/bgreglistagre">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ingrese una Nueva Receta"
        android:textSize="30dp"
        android:textColor="#000000"
        android:textStyle="bold"
        android:layout_gravity="center"
        android:layout_marginBottom="7dp"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ingrese el nombre:"
                android:textSize="20dp"
                android:textColor="#000000"
                android:textStyle="bold"
                android:layout_gravity="center"
                android:layout_marginBottom="10dp"/>

            <EditText
                android:id="@+id/txt_name"
                android:layout_width="300dp"
                android:layout_height="35dp"
                android:background="#E2F8F8F8"
                android:textStyle="bold"
                android:layout_gravity="center"
                android:layout_marginBottom="10dp"
                android:hint="Nombre de Receta"
                android:textAlignment="center"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Seleccione la imagen:"
                android:textSize="20dp"
                android:textColor="#000000"
                android:textStyle="bold"
                android:layout_gravity="center"
                android:layout_marginBottom="10dp"/>

            <Button
                android:id="@+id/btn_loadImage"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@drawable/button"
                android:text="Cargar Imagen"
                android:onClick="loadImage"
                android:layout_marginBottom="10dp"/>

            <TextView
                android:id="@+id/txt_routeRecipes"
                android:layout_width="300dp"
                android:layout_height="45dp"
                android:background="#E2F8F8F8"
                android:layout_gravity="center"
                android:textStyle="bold"
                android:layout_marginBottom="10dp"
                android:textColor="#071019"
                android:hint="Inserte la Imagen"
                android:textAlignment="center"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ingrese la descripcion:"
                android:textSize="20dp"
                android:textColor="#000000"
                android:textStyle="bold"
                android:layout_gravity="center"
                android:layout_marginBottom="10dp"/>

            <EditText
                android:id="@+id/txt_description"
                android:layout_width="300dp"
                android:layout_height="50dp"
                android:background="#E2F8F8F8"
                android:layout_gravity="center"
                android:textStyle="bold"
                android:layout_marginBottom="10dp"
                android:hint="Descripcion de la receta"
                android:textAlignment="center"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ingrese los ingredientes:"
                android:textSize="20dp"
                android:textColor="#000000"
                android:textStyle="bold"
                android:layout_gravity="center"
                android:layout_marginBottom="10dp"/>

            <EditText
                android:id="@+id/txt_ingredients"
                android:layout_width="300dp"
                android:layout_height="50dp"
                android:background="#E2F8F8F8"
                android:layout_gravity="center"
                android:textStyle="bold"
                android:layout_marginBottom="10dp"
                android:hint="Ingrese los Ingredientes"
                android:textAlignment="center"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ingrese el restaurante:"
                android:textSize="20dp"
                android:textColor="#000000"
                android:textStyle="bold"
                android:layout_gravity="center"
                android:layout_marginBottom="10dp"/>

            <EditText
                android:id="@+id/txt_restaurant"
                android:layout_width="300dp"
                android:layout_height="35dp"
                android:background="#E2F8F8F8"
                android:layout_gravity="center"
                android:textStyle="bold"
                android:layout_marginBottom="10dp"
                android:hint="Ingrese el Restaurante"
                android:textAlignment="center"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ingrese los comentarios:"
                android:textSize="20dp"
                android:textColor="#000000"
                android:textStyle="bold"
                android:layout_gravity="center"
                android:layout_marginBottom="10dp"/>

            <EditText
                android:id="@+id/txt_comments"
                android:layout_width="300dp"
                android:layout_height="50dp"
                android:background="#E2F8F8F8"
                android:layout_gravity="center"
                android:textStyle="bold"
                android:layout_marginBottom="10dp"
                android:hint="Ingrese sus Comentarios"
                android:textAlignment="center"/>

            <Button
                android:id="@+id/btn_saveRecipe"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@drawable/button"
                android:text="Guardar"
                android:onClick="ValidarDatos"/>

        </LinearLayout>
    </ScrollView>
</LinearLayout>